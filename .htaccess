# Main .htaccess for root
RewriteEngine On
RewriteBase /nour/

# Redirect root to blog
RewriteRule ^$ blog/index.php [L]
RewriteRule ^index\.php$ blog/index.php [L]

# Admin routes
RewriteRule ^admin/?(.*)$ blog_admin/index.php?$1 [L,QSA]

# All other routes go to blog
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ blog/index.php?url=$1 [L,QSA]
